{
"customManagers": [
    {
      "customType": "regex",
      "managerFilePatterns": [
        "/^\\.gitlab-ci\\.yml$/"
      ],
      "matchStrings": [
        "CI_RENOVATE_IMAGE:\\s*ghcr\\.io/renovatebot/renovate:(?<currentValue>.*)"
      ],
      "depNameTemplate": "ghcr.io/renovatebot/renovate",
      "datasourceTemplate": "docker"
    }
  ],
  "packageRules": [
    {
      "matchDatasources": [
        "docker"
      ],
      "matchDepNames": [
        "ghcr.io/renovatebot/renovate"
      ],
      "allowedVersions": "/-full$/"
    },
    {
      "matchDatasources": [
        "docker"
      ],
      "matchDepNames": [
        "ghcr.io/renovatebot/renovate"
      ],
      "matchUpdateTypes": [
        "patch"
      ],
      "automerge": true,
      "automergeType": "branch",
      "ignoreTests": true
    }
  ]
}
